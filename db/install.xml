<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/vendorbilling/db" VERSION="2026021000" COMMENT="Vendor billing plugin tables">
  <TABLES>
    <TABLE NAME="local_vendorbilling_vendor" COMMENT="Vendors mapped to Stripe subscriptions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="org_name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="org_email_domain" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="stripe_customer_id" TYPE="char" LENGTH="128" NOTNULL="false"/>
        <FIELD NAME="stripe_subscription_id" TYPE="char" LENGTH="128" NOTNULL="false"/>
        <FIELD NAME="stripe_price_id" TYPE="char" LENGTH="128" NOTNULL="false"/>
        <FIELD NAME="plan_code" TYPE="char" LENGTH="64" NOTNULL="false"/>
        <FIELD NAME="seat_limit" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="vendor_admin_userid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="vendor_admin_email" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="cohortid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="created_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="updated_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="stripe_customer_idx" UNIQUE="false" FIELDS="stripe_customer_id"/>
        <INDEX NAME="stripe_subscription_idx" UNIQUE="false" FIELDS="stripe_subscription_id"/>
        <INDEX NAME="vendor_admin_idx" UNIQUE="false" FIELDS="vendor_admin_userid"/>
        <INDEX NAME="vendor_admin_email_idx" UNIQUE="false" FIELDS="vendor_admin_email"/>
        <INDEX NAME="cohort_idx" UNIQUE="false" FIELDS="cohortid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_vendorbilling_eventlog" COMMENT="Stripe webhook events">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="event_id" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="event_type" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="payload_hash" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="received_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="processed_at" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="error" TYPE="text" NOTNULL="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="event_id_uix" UNIQUE="true" FIELDS="event_id"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_vendorbilling_log" COMMENT="Vendor billing logs">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="vendorid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="level" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="info"/>
        <FIELD NAME="message" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="data" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="created_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="vendor_idx" UNIQUE="false" FIELDS="vendorid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
